<div class="admin-topbar">
    <div class="d-flex align-items-center gap-3">
        <button class="btn btn-link d-md-none p-0" type="button" id="sidebarToggle">
            <i class="bi bi-list fs-4"></i>
        </button>
        <h1 class="admin-topbar-title d-none d-md-block">@ViewData["Title"]</h1>
    </div>
    <div class="admin-topbar-user">
        <span class="text-muted d-none d-md-inline">
            <i class="bi bi-person-circle me-1"></i>
            @User.Identity?.Name
        </span>
        <div class="dropdown">
            <button class="btn btn-link text-decoration-none" type="button" id="userDropdown" data-bs-toggle="dropdown">
                <i class="bi bi-person-circle fs-4"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><span class="dropdown-item-text">@User.Identity?.Name</span></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form method="post" action="/Admin/Account/Logout">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item text-danger">
                            <i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</div>

