@model CafeMenu.Application.Models.ViewModels.RoleEditViewModel
@{
    ViewData["Title"] = "Rol Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Rol Düzenle</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom">
                <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                <li class="breadcrumb-item"><a href="/Admin/Role">Roller</a></li>
                <li class="breadcrumb-item active">Düzenle</li>
            </ol>
        </nav>
    </div>
</div>

<div class="content-card">
    <form asp-area="Admin" asp-controller="Role" asp-action="Edit" method="post" class="form-modern">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="RoleId" />
        <input type="hidden" asp-for="TenantId" />
        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

        <div class="mb-4">
            <label class="form-label">İşletme</label>
            <input type="text" class="form-control" value="@Model.TenantName" readonly />
        </div>

        <div class="mb-4">
            <label asp-for="Name" class="form-label">Rol Adı</label>
            @if (Model.IsSystem)
            {
                <input asp-for="Name" class="form-control" readonly />
            }
            else
            {
                <input asp-for="Name" class="form-control" placeholder="Rol adını girin" />
            }
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <div class="form-check form-switch">
                @if (Model.IsSystem)
                {
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" disabled />
                }
                else
                {
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                }
                <label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
            </div>
        </div>

        @if (Model.IsSystem)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle me-2"></i>Sistem rolleri düzenlenemez.
            </div>
        }

        <div class="d-flex gap-2 justify-content-end">
            <a asp-area="Admin" asp-controller="Role" asp-action="Index" class="btn btn-modern btn-secondary">
                <i class="bi bi-x-circle me-2"></i>İptal
            </a>
            <button type="submit" class="btn btn-modern btn-modern-primary" @(Model.IsSystem ? "disabled" : "")>
                <i class="bi bi-check-circle me-2"></i>Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

