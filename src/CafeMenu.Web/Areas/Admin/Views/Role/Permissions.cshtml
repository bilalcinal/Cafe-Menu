@model CafeMenu.Application.Models.ViewModels.RolePermissionsViewModel
@{
    ViewData["Title"] = "Rol İzinleri";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Rol İzinleri: @Model.Name</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom">
                <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                <li class="breadcrumb-item"><a href="/Admin/Role">Roller</a></li>
                <li class="breadcrumb-item active">İzinler</li>
            </ol>
        </nav>
    </div>
    <a asp-area="Admin" asp-controller="Role" asp-action="Index" class="btn btn-modern btn-secondary">
        <i class="bi bi-arrow-left me-2"></i>Geri
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["InfoMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="content-card">
    <div class="mb-4">
        <p class="text-muted">
            <strong>İşletme:</strong> @Model.TenantName
            @if (Model.IsSystem)
            {
                <span class="badge bg-warning text-dark ms-2">Sistem Rolü</span>
            }
        </p>
    </div>

    @if (Model.IsSystem && Model.Name == "SuperAdmin")
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>SuperAdmin rolü tüm izinlere sahiptir ve düzenlenemez.
        </div>
    }
    else
    {
        <form asp-area="Admin" asp-controller="Role" asp-action="Permissions" method="post" class="form-modern">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="RoleId" />
            <input type="hidden" asp-for="TenantId" />

            @foreach (var group in Model.AvailablePermissions.GroupBy(p => p.GroupName).OrderBy(g => g.Key))
            {
                var groupKey = group.Key.Replace(" ", "").Replace("ö", "o").Replace("ü", "u").Replace("ş", "s").Replace("ğ", "g").Replace("ç", "c").Replace("ı", "i").Replace("Ö", "O").Replace("Ü", "U").Replace("Ş", "S").Replace("Ğ", "G").Replace("Ç", "C").Replace("İ", "I");
                var groupId = "group-" + groupKey;
                var allChecked = group.All(p => Model.SelectedPermissionIds.Contains(p.PermissionId));
                
                <div class="permission-group mb-4">
                    <h5 class="mb-3 d-flex align-items-center">
                        <div class="form-check me-3">
                            <input class="form-check-input permission-group-toggle" type="checkbox" 
                                   id="@groupId" 
                                   data-group="@groupKey"
                                   @(allChecked ? "checked" : "") />
                            <label class="form-check-label" for="@groupId">
                                Tümünü Seç
                            </label>
                        </div>
                        <i class="bi bi-folder me-2"></i>@group.Key
                    </h5>
                    <div class="row">
                        @foreach (var permission in group.OrderBy(p => p.DisplayName))
                        {
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input permission-checkbox" type="checkbox" 
                                           name="SelectedPermissionIds" 
                                           value="@permission.PermissionId" 
                                           id="permission_@permission.PermissionId"
                                           data-group="@groupKey"
                                           @(Model.SelectedPermissionIds.Contains(permission.PermissionId) ? "checked" : "") />
                                    <label class="form-check-label" for="permission_@permission.PermissionId">
                                        @permission.DisplayName
                                        <small class="text-muted d-block">@permission.Key</small>
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="d-flex gap-2 justify-content-end mt-4">
                <a asp-area="Admin" asp-controller="Role" asp-action="Index" class="btn btn-modern btn-secondary">
                    <i class="bi bi-x-circle me-2"></i>İptal
                </a>
                <button type="submit" class="btn btn-modern btn-modern-primary">
                    <i class="bi bi-check-circle me-2"></i>İzinleri Kaydet
                </button>
            </div>
        </form>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const groupToggles = document.querySelectorAll('.permission-group-toggle');
            
            groupToggles.forEach(function(toggle) {
                toggle.addEventListener('change', function() {
                    const groupKey = this.getAttribute('data-group');
                    const isChecked = this.checked;
                    const groupCheckboxes = document.querySelectorAll('.permission-checkbox[data-group="' + groupKey + '"]');
                    
                    groupCheckboxes.forEach(function(checkbox) {
                        checkbox.checked = isChecked;
                    });
                });
            });
            
            const permissionCheckboxes = document.querySelectorAll('.permission-checkbox');
            permissionCheckboxes.forEach(function(checkbox) {
                checkbox.addEventListener('change', function() {
                    const groupKey = this.getAttribute('data-group');
                    const groupCheckboxes = document.querySelectorAll('.permission-checkbox[data-group="' + groupKey + '"]');
                    const checkedCount = Array.from(groupCheckboxes).filter(cb => cb.checked).length;
                    const groupToggle = document.querySelector('.permission-group-toggle[data-group="' + groupKey + '"]');
                    
                    if (groupToggle) {
                        groupToggle.checked = checkedCount === groupCheckboxes.length;
                    }
                });
            });
        });
    </script>
}

