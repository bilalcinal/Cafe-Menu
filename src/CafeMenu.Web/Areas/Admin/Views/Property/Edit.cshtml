@model CafeMenu.Application.Models.ViewModels.PropertyViewModel
@{
    ViewData["Title"] = "Özellik Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Özellik Düzenle</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom">
                <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                <li class="breadcrumb-item"><a href="/Admin/Property">Özellikler</a></li>
                <li class="breadcrumb-item active">Düzenle</li>
            </ol>
        </nav>
    </div>
</div>

<div class="content-card">
    <form asp-area="Admin" asp-controller="Property" asp-action="Edit" method="post" class="form-modern">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PropertyId" />
        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

        <div class="mb-4">
            <label asp-for="Key" class="form-label"></label>
            <input asp-for="Key" class="form-control" placeholder="Özellik anahtarı (örn: Boyut, Şeker)" />
            <small class="text-muted">Özelliğin anahtar adı (örn: Boyut, Şeker, Süt)</small>
            <span asp-validation-for="Key" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Value" class="form-label"></label>
            <input asp-for="Value" class="form-control" placeholder="Özellik değeri (örn: Büyük, Az, Tam Yağlı)" />
            <small class="text-muted">Özelliğin değeri (örn: Büyük, Az, Tam Yağlı)</small>
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2 justify-content-end">
            <a asp-area="Admin" asp-controller="Property" asp-action="Index" class="btn btn-modern btn-secondary">
                <i class="bi bi-x-circle me-2"></i>İptal
            </a>
            <button type="submit" class="btn btn-modern btn-modern-primary">
                <i class="bi bi-check-circle me-2"></i>Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
