@model IReadOnlyList<CafeMenu.Application.Models.PropertyDto>
@{
    ViewData["Title"] = "Özellikler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Özellikler</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom">
                <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                <li class="breadcrumb-item active">Özellikler</li>
            </ol>
        </nav>
    </div>
    <a asp-area="Admin" asp-controller="Property" asp-action="Create" class="btn btn-modern btn-modern-primary">
        <i class="bi bi-plus-circle me-2"></i>Yeni Özellik
    </a>
</div>

<div class="content-card">
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-modern">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Özellik Anahtarı</th>
                        <th>Özellik Değeri</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var property in Model)
                    {
                        <tr>
                            <td><span class="badge bg-secondary">@property.PropertyId</span></td>
                            <td>
                                <span class="badge bg-info text-white px-3 py-2">
                                    <i class="bi bi-key me-1"></i>@property.Key
                                </span>
                            </td>
                            <td>@property.Value</td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-area="Admin" asp-controller="Property" asp-action="Edit" asp-route-id="@property.PropertyId" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-area="Admin" asp-controller="Property" asp-action="Delete" asp-route-id="@property.PropertyId" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Bu özelliği silmek istediğinize emin misiniz?');">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-tags"></i>
            </div>
            <h4>Özellik bulunamadı</h4>
            <p class="text-muted">Henüz özellik eklenmemiş.</p>
            <a asp-area="Admin" asp-controller="Property" asp-action="Create" class="btn btn-modern btn-modern-primary mt-3">
                <i class="bi bi-plus-circle me-2"></i>İlk Özelliği Ekle
            </a>
        </div>
    }
</div>
