@model IReadOnlyList<CafeMenu.Application.Models.PropertyDto>
@{
    ViewData["Title"] = "Özellikler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Özellikler</h2>
    <a asp-action="Create" class="btn btn-primary">Yeni Özellik</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Key</th>
            <th>Value</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var property in Model)
        {
            <tr>
                <td>@property.PropertyId</td>
                <td>@property.Key</td>
                <td>@property.Value</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@property.PropertyId" class="btn btn-sm btn-warning">Düzenle</a>
                    <form asp-action="Delete" asp-route-id="@property.PropertyId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</button>
                    </form>
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center text-muted">Özellik bulunamadı</td>
            </tr>
        }
    </tbody>
</table>

