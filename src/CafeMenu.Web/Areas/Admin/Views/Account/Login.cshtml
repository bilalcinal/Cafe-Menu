@model CafeMenu.Application.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Admin Girişi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cafe Menu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .login-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .login-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 10px 10px -5px rgb(0 0 0 / 0.04);
            overflow: hidden;
            max-width: 420px;
            width: 100%;
        }
        .login-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
            padding: 2rem;
            text-align: center;
        }
        .login-body {
            padding: 2rem;
        }
        .login-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="login-page">
        <div class="login-card">
            <div class="login-header">
                <i class="bi bi-shield-lock-fill login-icon"></i>
                <h3 class="mb-0">Admin Paneli</h3>
                <p class="mb-0 opacity-75">Cafe Menu Yönetim Sistemi</p>
            </div>
            <div class="login-body">
                <form asp-area="Admin" asp-controller="Account" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    @if (!string.IsNullOrEmpty(Context.Request.Query["ReturnUrl"]))
                    {
                        <input type="hidden" name="returnUrl" value="@Context.Request.Query["ReturnUrl"]" />
                    }
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label for="UserName" class="form-label">
                            <i class="bi bi-person me-1"></i>Kullanıcı Adı
                        </label>
                        <input type="text" id="UserName" name="UserName" class="form-control form-modern" 
                               autocomplete="username" required value="@Model.UserName" 
                               placeholder="Kullanıcı adınızı girin" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label for="Password" class="form-label">
                            <i class="bi bi-lock me-1"></i>Şifre
                        </label>
                        <input type="password" id="Password" name="Password" class="form-control form-modern" 
                               autocomplete="current-password" required 
                               placeholder="Şifrenizi girin" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-modern btn-modern-primary w-100">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                    </button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
