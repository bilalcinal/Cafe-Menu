@model IReadOnlyList<CafeMenu.Application.Models.CategoryDto>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Kategoriler</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom">
                <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                <li class="breadcrumb-item active">Kategoriler</li>
            </ol>
        </nav>
    </div>
    <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-modern btn-modern-primary">
        <i class="bi bi-plus-circle me-2"></i>Yeni Kategori
    </a>
</div>

<div class="content-card">
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-modern">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kategori Adı</th>
                        <th>Üst Kategori</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td><span class="badge bg-secondary">@category.CategoryId</span></td>
                            <td>
                                <i class="bi bi-folder me-2 text-primary"></i>@category.CategoryName
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(category.ParentCategoryName))
                                {
                                    <span class="text-muted">
                                        <i class="bi bi-arrow-up me-1"></i>@category.ParentCategoryName
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-folder-x"></i>
            </div>
            <h4>Kategori bulunamadı</h4>
            <p class="text-muted">Henüz kategori eklenmemiş.</p>
            <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-modern btn-modern-primary mt-3">
                <i class="bi bi-plus-circle me-2"></i>İlk Kategoriyi Ekle
            </a>
        </div>
    }
</div>
