@model IReadOnlyList<CafeMenu.Application.Models.CategoryDto>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Kategoriler</h2>
    <a asp-action="Create" class="btn btn-primary">Yeni Kategori</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th>Üst Kategori</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>@(category.ParentCategoryName ?? "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-sm btn-warning">Düzenle</a>
                    <form asp-action="Delete" asp-route-id="@category.CategoryId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</button>
                    </form>
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center text-muted">Kategori bulunamadı</td>
            </tr>
        }
    </tbody>
</table>

