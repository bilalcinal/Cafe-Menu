@model CafeMenu.Application.Models.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Yeni Kategori";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Kategori</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="CategoryName" class="form-label"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ParentCategoryId" class="form-label"></label>
        <select asp-for="ParentCategoryId" class="form-select">
            <option value="">Üst Kategori Yok</option>
            @foreach (var parent in Model.AvailableParentCategories)
            {
                <option value="@parent.CategoryId">@parent.CategoryName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

