@model IReadOnlyList<CafeMenu.Application.Models.TenantDto>
@{
    ViewData["Title"] = "İşletmeler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">İşletmeler</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom">
                <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                <li class="breadcrumb-item active">İşletmeler</li>
            </ol>
        </nav>
    </div>
    <a asp-area="Admin" asp-controller="Tenant" asp-action="Create" class="btn btn-modern btn-modern-primary">
        <i class="bi bi-plus-circle me-2"></i>Yeni İşletme
    </a>
</div>

<div class="content-card">
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-modern">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Ad</th>
                        <th>Kod</th>
                        <th>Durum</th>
                        <th>Oluşturulma</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tenant in Model)
                    {
                        <tr>
                            <td><span class="badge bg-secondary">@tenant.TenantId</span></td>
                            <td>
                                <i class="bi bi-building me-2 text-primary"></i>@tenant.Name
                            </td>
                            <td>
                                <span class="badge bg-info text-white">@tenant.Code</span>
                            </td>
                            <td>
                                @if (tenant.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                            <td>@tenant.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-area="Admin" asp-controller="Tenant" asp-action="Edit" asp-route-id="@tenant.TenantId" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-area="Admin" asp-controller="Tenant" asp-action="Delete" asp-route-id="@tenant.TenantId" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Bu işletmeyi silmek istediğinize emin misiniz?');">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-building-x"></i>
            </div>
            <h4>İşletme bulunamadı</h4>
            <p class="text-muted">Henüz işletme eklenmemiş.</p>
            <a asp-area="Admin" asp-controller="Tenant" asp-action="Create" class="btn btn-modern btn-modern-primary mt-3">
                <i class="bi bi-plus-circle me-2"></i>İlk İşletmeyi Ekle
            </a>
        </div>
    }
</div>

