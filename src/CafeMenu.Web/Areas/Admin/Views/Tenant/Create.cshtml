@model CafeMenu.Application.Models.ViewModels.TenantViewModel
@{
    ViewData["Title"] = "Yeni Tenant";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Yeni Tenant</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom">
                <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                <li class="breadcrumb-item"><a href="/Admin/Tenant">Tenantlar</a></li>
                <li class="breadcrumb-item active">Yeni</li>
            </ol>
        </nav>
    </div>
</div>

<div class="content-card">
    <form asp-area="Admin" asp-controller="Tenant" asp-action="Create" method="post" class="form-modern">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

        <div class="mb-4">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Tenant adını girin" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Code" class="form-label"></label>
            <input asp-for="Code" class="form-control" placeholder="TENANT_CODE" />
            <small class="text-muted">Büyük harf, rakam, tire ve alt çizgi kullanılabilir</small>
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label">Aktif</label>
            </div>
        </div>

        <div class="d-flex gap-2 justify-content-end">
            <a asp-area="Admin" asp-controller="Tenant" asp-action="Index" class="btn btn-modern btn-secondary">
                <i class="bi bi-x-circle me-2"></i>İptal
            </a>
            <button type="submit" class="btn btn-modern btn-modern-primary">
                <i class="bi bi-check-circle me-2"></i>Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

