@model IReadOnlyList<CafeMenu.Application.Models.ProductDto>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Ürünler</h2>
    <a asp-action="Create" class="btn btn-primary">Yeni Ürün</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün Adı</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.CategoryName</td>
                <td>@product.Price.ToString("N2") ₺</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-sm btn-warning">Düzenle</a>
                    <form asp-action="Delete" asp-route-id="@product.ProductId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</button>
                    </form>
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Ürün bulunamadı</td>
            </tr>
        }
    </tbody>
</table>

