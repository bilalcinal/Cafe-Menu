@model IReadOnlyList<CafeMenu.Application.Models.ProductDto>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Ürünler</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom">
                <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                <li class="breadcrumb-item active">Ürünler</li>
            </ol>
        </nav>
    </div>
    <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-modern btn-modern-primary">
        <i class="bi bi-plus-circle me-2"></i>Yeni Ürün
    </a>
</div>

<div class="content-card">
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-modern">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ürün Adı</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td><span class="badge bg-secondary">@product.ProductId</span></td>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(product.ImagePath))
                                    {
                                        <img src="@product.ImagePath" alt="@product.ProductName" 
                                             class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded me-2 d-flex align-items-center justify-content-center" 
                                             style="width: 40px; height: 40px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                                    <span>@product.ProductName</span>
                                </div>
                            </td>
                            <td>
                                <i class="bi bi-tag me-1 text-primary"></i>@product.CategoryName
                            </td>
                            <td>
                                <span class="fw-bold text-success">@product.Price.ToString("N2") ₺</span>
                            </td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-box-seam"></i>
            </div>
            <h4>Ürün bulunamadı</h4>
            <p class="text-muted">Henüz ürün eklenmemiş.</p>
            <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-modern btn-modern-primary mt-3">
                <i class="bi bi-plus-circle me-2"></i>İlk Ürünü Ekle
            </a>
        </div>
    }
</div>
