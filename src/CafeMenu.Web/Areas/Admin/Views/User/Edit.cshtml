@model CafeMenu.Application.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Kullanıcı Düzenle</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom">
                <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                <li class="breadcrumb-item"><a href="/Admin/User">Kullanıcılar</a></li>
                <li class="breadcrumb-item active">Düzenle</li>
            </ol>
        </nav>
    </div>
</div>

<div class="content-card">
    <form asp-area="Admin" asp-controller="User" asp-action="Edit" method="post" class="form-modern">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UserId" />
        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-4">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Ad" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-4">
                    <label asp-for="Surname" class="form-label"></label>
                    <input asp-for="Surname" class="form-control" placeholder="Soyad" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="mb-4">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adı" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Password" class="form-label">Yeni Şifre (Opsiyonel)</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Değiştirmek istemiyorsanız boş bırakın" />
            <small class="text-muted">Değiştirmek istemiyorsanız boş bırakın</small>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        @if (Model.AvailableTenants.Count > 1)
        {
            <div class="mb-4">
                <label asp-for="TenantId" class="form-label"></label>
                <select asp-for="TenantId" class="form-select" id="tenantSelect" asp-items="@(new SelectList(Model.AvailableTenants, "TenantId", "Name"))">
                    <option value="">Tenant Seçiniz</option>
                </select>
                <span asp-validation-for="TenantId" class="text-danger"></span>
            </div>
        }
        else
        {
            <input type="hidden" asp-for="TenantId" />
        }

        <div class="mb-4">
            <label asp-for="RoleId" class="form-label"></label>
            <select asp-for="RoleId" class="form-select" id="roleSelect">
                <option value="">Rol Seçiniz</option>
                @foreach (var role in Model.AvailableRoles)
                {
                    <option value="@role.RoleId" data-tenant-id="@role.TenantId" selected="@(role.RoleId == Model.RoleId)">@role.Name</option>
                }
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2 justify-content-end">
            <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-modern btn-secondary">
                <i class="bi bi-x-circle me-2"></i>İptal
            </a>
            <button type="submit" class="btn btn-modern btn-modern-primary">
                <i class="bi bi-check-circle me-2"></i>Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tenantSelect = document.getElementById('tenantSelect');
            const roleSelect = document.getElementById('roleSelect');
            
            if (tenantSelect) {
                function updateRoles() {
                    const selectedTenantId = tenantSelect.value;
                    const roleOptions = roleSelect.querySelectorAll('option[data-tenant-id]');
                    const currentRoleId = roleSelect.value;
                    
                    roleSelect.innerHTML = '<option value="">Rol Seçiniz</option>';
                    
                    roleOptions.forEach(function(option) {
                        if (option.getAttribute('data-tenant-id') === selectedTenantId) {
                            roleSelect.appendChild(option.cloneNode(true));
                        }
                    });
                    
                    if (currentRoleId && roleSelect.querySelector('option[value="' + currentRoleId + '"]')) {
                        roleSelect.value = currentRoleId;
                    }
                }
                
                tenantSelect.addEventListener('change', updateRoles);
                updateRoles();
            }
        });
    </script>
}

