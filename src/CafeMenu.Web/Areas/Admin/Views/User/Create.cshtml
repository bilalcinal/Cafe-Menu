@model CafeMenu.Application.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Yeni Kullanıcı";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Yeni Kullanıcı</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom">
                <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                <li class="breadcrumb-item"><a href="/Admin/User">Kullanıcılar</a></li>
                <li class="breadcrumb-item active">Yeni</li>
            </ol>
        </nav>
    </div>
</div>

<div class="content-card">
    <form asp-area="Admin" asp-controller="User" asp-action="Create" method="post" class="form-modern">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="alert alert-danger validation-summary" role="alert"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-4">
                    <label asp-for="Name" class="form-label">Ad</label>
                    <input asp-for="Name" class="form-control" placeholder="Ad girin" />
                    <span asp-validation-for="Name" class="text-danger validation-message"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-4">
                    <label asp-for="Surname" class="form-label">Soyad</label>
                    <input asp-for="Surname" class="form-control" placeholder="Soyad girin" />
                    <span asp-validation-for="Surname" class="text-danger validation-message"></span>
                </div>
            </div>
        </div>

        <div class="mb-4">
            <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
            <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adı girin" />
            <span asp-validation-for="UserName" class="text-danger validation-message"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Password" class="form-label">Şifre</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Şifre girin" />
            <small class="text-muted">En az 6 karakter olmalıdır</small>
            <span asp-validation-for="Password" class="text-danger validation-message"></span>
        </div>

        @if (Model.AvailableTenants.Count > 1)
        {
            <div class="mb-4">
                <label asp-for="TenantId" class="form-label">İşletme</label>
                <select asp-for="TenantId" class="form-select" id="tenantSelect" asp-items="@(new SelectList(Model.AvailableTenants, "TenantId", "Name"))">
                    <option value="">İşletme Seçiniz</option>
                </select>
                <span asp-validation-for="TenantId" class="text-danger validation-message"></span>
            </div>
        }
        else
        {
            <input type="hidden" asp-for="TenantId" />
        }

        <div class="mb-4">
            <label asp-for="RoleId" class="form-label">Rol</label>
            <select asp-for="RoleId" class="form-select" id="roleSelect">
                <option value="">Rol Seçiniz</option>
                @foreach (var role in Model.AvailableRoles)
                {
                    <option value="@role.RoleId" data-tenant-id="@role.TenantId">@role.Name</option>
                }
            </select>
            <span asp-validation-for="RoleId" class="text-danger validation-message"></span>
        </div>

        <div class="d-flex gap-2 justify-content-end">
            <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-modern btn-secondary">
                <i class="bi bi-x-circle me-2"></i>İptal
            </a>
            <button type="submit" class="btn btn-modern btn-modern-primary">
                <i class="bi bi-check-circle me-2"></i>Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tenantSelect = document.getElementById('tenantSelect');
            const roleSelect = document.getElementById('roleSelect');
            
            if (tenantSelect) {
                tenantSelect.addEventListener('change', function() {
                    const selectedTenantId = this.value;
                    
                    if (!selectedTenantId) {
                        roleSelect.innerHTML = '<option value="">Rol Seçiniz</option>';
                        return;
                    }
                    
                    roleSelect.innerHTML = '<option value="">Yükleniyor...</option>';
                    roleSelect.disabled = true;
                    
                    fetch('/Admin/User/GetRolesByTenant?tenantId=' + selectedTenantId)
                        .then(response => response.json())
                        .then(data => {
                            roleSelect.innerHTML = '<option value="">Rol Seçiniz</option>';
                            
                            if (data.success && data.roles) {
                                data.roles.forEach(function(role) {
                                    const option = document.createElement('option');
                                    option.value = role.roleId;
                                    option.textContent = role.name;
                                    roleSelect.appendChild(option);
                                });
                            }
                            
                            roleSelect.disabled = false;
                        })
                        .catch(error => {
                            roleSelect.innerHTML = '<option value="">Hata oluştu</option>';
                            roleSelect.disabled = false;
                        });
                });
            }
        });
    </script>
}

