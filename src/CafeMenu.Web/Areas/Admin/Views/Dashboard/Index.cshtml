@model CafeMenu.Application.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header mb-4">
    <div>
        <h1 class="page-title">Yönetim Paneli</h1>
        <p class="text-muted mb-0">Genel durum ve hızlı özet.</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="content-card h-100">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">
                    <i class="bi bi-bar-chart me-2 text-primary"></i>
                    Kategoriye Göre Ürün Sayısı
                </h5>
                <button type="button" class="btn btn-sm btn-outline-secondary" id="refreshProductWidget">
                    <i class="bi bi-arrow-clockwise me-1"></i>Yenile
                </button>
            </div>

            <div id="product-widget-loading" class="text-muted small mb-2">
                Yükleniyor...
            </div>

            <div class="table-responsive">
                <table class="table table-modern mb-0" id="product-widget-table">
                    <thead>
                        <tr>
                            <th>Kategori</th>
                            <th class="text-end">Ürün Sayısı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CategoryProductCounts)
                        {
                            <tr>
                                <td>@item.CategoryName</td>
                                <td class="text-end">
                                    <span class="badge bg-primary">@item.ProductCount</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-4">
        <div class="content-card h-100">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">
                    <i class="bi bi-currency-exchange me-2 text-success"></i>
                    Güncel Kur Bilgisi
                </h5>
                <span class="badge bg-light text-muted" id="currency-last-update">
                    -
                </span>
            </div>

            <div id="currency-widget-loading" class="text-muted small mb-2">
                Yükleniyor...
            </div>

            <div class="d-flex flex-column gap-2">
                <div class="d-flex justify-content-between align-items-center">
                    <span>USD / TRY</span>
                    <span class="fw-semibold" id="usd-rate">-</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>EUR / TRY</span>
                    <span class="fw-semibold" id="eur-rate">-</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>TRY</span>
                    <span class="fw-semibold" id="try-rate">-</span>
                </div>
            </div>

            <div class="mt-3 text-muted small">
                Kur bilgisi <code>http://any.kur.com/kurlar</code> üzerinden alınmaktadır
                ve her 10 saniyede bir yenilenmektedir.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function loadProductWidget() {
            const loading = document.getElementById('product-widget-loading');
            const tbody = document.querySelector('#product-widget-table tbody');
            if (!tbody) return;

            loading.textContent = 'Yükleniyor...';

            try {
                const response = await fetch('/Admin/Dashboard/ProductCountWidget');
                if (!response.ok) throw new Error('İstek başarısız oldu');

                const data = await response.json();
                tbody.innerHTML = '';

                if (!data || data.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="2" class="text-muted">Kayıt bulunamadı.</td></tr>';
                } else {
                    data.forEach(item => {
                        const tr = document.createElement('tr');

                        const tdCat = document.createElement('td');
                        tdCat.textContent = item.categoryName;

                        const tdCount = document.createElement('td');
                        tdCount.classList.add('text-end');
                        tdCount.innerHTML = `<span class="badge bg-primary">${item.productCount}</span>`;

                        tr.appendChild(tdCat);
                        tr.appendChild(tdCount);
                        tbody.appendChild(tr);
                    });
                }

                loading.textContent = '';
            } catch (e) {
                loading.textContent = 'Kategori verileri yüklenirken bir hata oluştu.';
            }
        }

        async function loadCurrencyWidget() {
            const loading = document.getElementById('currency-widget-loading');
            const usd = document.getElementById('usd-rate');
            const eur = document.getElementById('eur-rate');
            const tl = document.getElementById('try-rate');
            const lastUpdate = document.getElementById('currency-last-update');

            if (loading) loading.textContent = 'Yükleniyor...';

            try {
                const response = await fetch('/Admin/Dashboard/CurrencyWidget');
                if (!response.ok) throw new Error('İstek başarısız oldu');

                const data = await response.json();

                if (usd) usd.textContent = typeof data.usd === 'number'
                    ? data.usd.toFixed(4)
                    : data.usd ?? '-';

                if (eur) eur.textContent = typeof data.eur === 'number'
                    ? data.eur.toFixed(4)
                    : data.eur ?? '-';

                if (tl) tl.textContent = typeof data.try === 'number'
                    ? data.try.toFixed(4)
                    : data.try ?? '-';

                if (lastUpdate) {
                    if (data.fetchedAt) {
                        // Sunucudan gelen "dd.MM.yyyy HH:mm:ss"
                        lastUpdate.textContent = data.fetchedAt;
                    } else {
                        // Yine de her çağrıda client saatine göre güncelle
                        lastUpdate.textContent = new Date().toLocaleString('tr-TR', {
                            day: '2-digit',
                            month: '2-digit',
                            year: 'numeric',
                            hour: '2-digit',
                            minute: '2-digit',
                            second: '2-digit'
                        });
                    }
                }

                if (loading) loading.textContent = '';
            } catch (e) {
                if (loading) loading.textContent = 'Kur bilgisi yüklenirken bir hata oluştu.';
                console.error('Currency widget error:', e);
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            loadProductWidget();
            loadCurrencyWidget();

            document.getElementById('refreshProductWidget')
                ?.addEventListener('click', loadProductWidget);

            setInterval(loadCurrencyWidget, 10000);
        });
    </script>
}
