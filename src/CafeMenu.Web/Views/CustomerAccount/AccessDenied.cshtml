@{
    ViewData["Title"] = "Erişim Reddedildi";
    Layout = "_CustomerLayout";
}

<div class="row">
    <div class="col-12">
        <div class="text-center py-5">
            <i class="bi bi-shield-exclamation" style="font-size: 5rem; color: #dc3545; margin-bottom: 2rem;"></i>
            <h1 class="display-4 fw-bold mb-3">Erişim Reddedildi</h1>
            <p class="lead text-muted mb-4">
                Bu sayfaya erişim yetkiniz bulunmamaktadır.
            </p>
            <div>
                <a asp-controller="Customer" asp-action="Index" class="btn btn-customer me-2">
                    <i class="bi bi-house me-2"></i>Ana Sayfaya Dön
                </a>
                <a asp-controller="CustomerAccount" asp-action="Login" class="btn btn-outline-secondary">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                </a>
            </div>
        </div>
    </div>
</div>

